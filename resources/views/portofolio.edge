<body>
    <br/>
    <div class="container" style="text-align:center">
        <h1> Portofolio </h1>
    </div>
    <div class="container" >
        <button class="btn btn-secondary" onclick="location.href='/'" style="background-color:transparent">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="black" class="bi bi-arrow-left" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
          </svg>
        </button>
    </div>
    <br/>
    <div class="container">
        <div class="table-responsive-xl">
            <h3>Portofolio Galih</h3>
          <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Kode Emiten</th>
                  <th scope="col">Avg</th>
                  <th scope="col">Harga Terakhir</th>
                  <th scope="col">%</th>
                  <th scope="col">Target Price</th>
                </tr>
              </thead>
              <tbody>
                @each(item in portofolio_galih)
                <tr>
                    <th scope="row">{{$loop.index+1}}</th>
                    <td class="col-md-3">{{item.kode_emiten}} </td>
                    <td class="col-md-3">{{item.avg}}</td>
                    <td class="col-md-3">{{item.last_price}}</td>
                      @if(item.persentase>0)
                      <td class="col-md-3">+{{item.persentase}}%</td>
                      @else
                      <td class="col-md-3">{{item.persentase}}%</td>
                      @endif
                    <td class="col-md-3">{{item.target_price}}</td>
                  </tr>
                @endeach
              </tbody>
            </table>
        </div>
    </div>
